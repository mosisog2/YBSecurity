# Environment Configuration for LIDA Analytics Platform

# OpenAI API Configuration (for LIDA framework)
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
DEFAULT_PORT=8081
RETAIL_ANALYTICS_PORT=8082
MULTI_DATASET_PORT=8084

# Data Configuration
DATASETS_DIR=datasets
DASHBOARDS_DIR=dashboards
LOGS_DIR=logs

# LIDA Configuration
LIDA_MODEL=gpt-3.5-turbo
LIDA_TEMPERATURE=0.2
LIDA_MAX_TOKENS=1000

# Debug Configuration
DEBUG=True
LOG_LEVEL=INFO

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_EXTENSIONS=csv,xlsx,json

# Cache Configuration
ENABLE_CACHE=True
CACHE_TTL=3600

# Security Configuration
SECRET_KEY=your_secret_key_here
CORS_ORIGINS=http://localhost:3000,http://localhost:8080